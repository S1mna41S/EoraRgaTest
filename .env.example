# GigaChat auth
GIGACHAT_CREDENTIALS=            # токен доступа
GIGACHAT_SCOPE=GIGACHAT_API_PERS  # или GIGACHAT_API_CORP
GIGACHAT_VERIFY_SSL=false          # true/false — проверка сертификатов

# Модель чата/эмбеддингов (значения по умолчанию SDK)
GIGACHAT_MODEL=GigaChat           # имя чат-модели
GIGACHAT_EMBEDDING_MODEL=Embeddings

# Локальный фолбэк эмбеддер (если нет GigaChat)
LOCAL_EMBEDDER=sentence-transformers/all-MiniLM-L6-v2
